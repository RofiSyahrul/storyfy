{
  "name": "storyfy",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Rofi",
    "url": "https://rofisyahrul.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RofiSyahrul/storyfy.git"
  },
  "scripts": {
    "build": "pnpm check && vite build",
    "build:local": "SPOTIFY_REDIRECT_URI=\"http://localhost:4567/callback\" pnpm build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "pnpm check && vite dev --port 7654",
    "format": "prettier --plugin-search-dir . --write . && eslint . --fix",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "lint:fix": "eslint --fix",
    "lint:fix:all": "eslint . --fix",
    "prepare": "husky install",
    "preview": "vite preview",
    "preview:local": "SPOTIFY_REDIRECT_URI=\"http://localhost:4567/callback\" pnpm preview --port 4567",
    "pre-commit": "lint-staged && pnpm test",
    "release": "standard-version",
    "test": "vitest run",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@poppanator/sveltekit-svg": "2.1.2",
    "@sveltejs/adapter-auto": "2.0.0",
    "@sveltejs/kit": "1.5.0",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "@vitest/coverage-c8": "0.28.3",
    "autoprefixer": "10.4.13",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-svelte3": "4.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "prettier-plugin-svelte": "2.9.0",
    "sass": "1.58.0",
    "svelte": "3.55.1",
    "svelte-check": "3.0.3",
    "svelte-preprocess": "5.0.1",
    "tslib": "2.5.0",
    "typescript": "4.9.5",
    "vite": "4.1.1",
    "vitest": "0.28.3"
  },
  "type": "module",
  "lint-staged": {
    "*.{svelte,ts,js}": [
      "prettier --check",
      "eslint"
    ]
  },
  "dependencies": {
    "dayjs": "1.11.7"
  }
}
